#!/usr/bin/env ruby
require 'rubygems'

$LOAD_PATH.unshift(File.dirname(__FILE__) + '/../lib') unless $LOAD_PATH.include?(File.dirname(__FILE__) + '/../lib')

require 'termislator'

puts ""
puts "=========TERMISLATOR========="
puts "USAGE:"
puts "termis 'source_language' 'target_language' 'text'"
puts ""
puts 'Example:'
puts "termis en fr 'hey cowboy where is your horse?'"
puts "=> 'hey cow-boy ou est votre cheval?'"
puts ""
puts "Check docs at: github.com/pawurb/termislator "
puts ""
